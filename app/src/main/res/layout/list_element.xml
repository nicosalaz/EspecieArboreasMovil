<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/image_arbol"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/login_image" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="@+id/image_arbol"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:layout_toEndOf="@+id/image_arbol"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Arbol"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="desc"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_revisar"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:gravity="right"
                android:textColor="@android:color/white"
                app:icon="@drawable/baseline_assignment_turned_in_24"
                app:iconGravity="start|end"
                app:iconPadding="0dp" />
<!--            android:layout_marginEnd="6dp"
            android:layout_marginBottom="0dp"-->

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>